      <component type="diffuse" value="0.44 0.18 0.17 0.1" />
      <component type="specular" value="0.22 0.09 0.085 0.1" />
    </appearance>

  </appearances>

  <graph rootid="float_thing">


    <node id="float_thing">
      <appearanceref id="float_"/>
      <transforms>
      </transforms>
      <descendants>
      </descendants>
      <primitives>
        <torus inner="0.3" outer="1" slices="20" loops="20"/>
      </primitives>
    </node>
    
  </graph>




